<h1>You cart</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <td>#</td>
      <td>Name</td>
      <td>Price</td>
      <td>Qty</td>
      <td>Sum</td>
    </tr>
  </thead>
  <tbody>

    <% @items.each_with_index do |item, i| %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= item[:product].title %></td>
        <td><%= item[:product].price %></td>
        <td><%= item[:qty] %></td>
        <td><%= item[:product].price.to_f * item[:qty].to_i %></td>
      </tr>
    <% end %>
  </tbody>
</table>